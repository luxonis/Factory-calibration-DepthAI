#!/bin/bash
source @CMAKE_BINARY_DIR@/../devel/setup.bash
export LC_NUMERIC="en_US.UTF-8"

check_roscore()
{
  rosnode list
  roscore_exist=$?
}

check_roscore
if [ $roscore_exist -ne 0 ]; then
  echo "roscore not running! Running it as background process"
  roscore &

  while [ $roscore_exist -eq 0 ]; do
    echo 'Waiting for roscore...'
    sleep 0.2
    check_roscore
  done
  sleep 1
fi

roslaunch @PROJECT_NAME@ moveit_interface.launch robot_name:=vx300s use_actual:=true  dof:=6
